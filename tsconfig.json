{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "declaration": true,
    "declarationMap": false,
    "outDir": "dist",
    "types": ["node", "@nuxt/schema"],
    "esModuleInterop": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "playground"
  ],
  "include": [
    "src/**/*"
  ]
}
